nav.navbar.navbar-expand-xl.fixed-top.py-3
    .container
        a.navbar-brand(href="/")
            img.img-fluid(src="/img/Zyno.Ink.png")
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            i.bi.bi-list
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto.rounded
                li.nav-item
                    a.nav-link.px-3.py-2.mx-2.my-2.my-lg-3(aria-current="page", href="/") Home
                li.nav-item
                    a.nav-link.px-3.py-2.mx-1.my-2.my-lg-3(href="/about") About us
                li.nav-item
                    a.nav-link.px-3.py-2.mx-1.my-2.my-lg-3(href="/pricing") Pricing
                li.nav-item
                    a.nav-link.px-3.py-2.mx-1.my-2.my-lg-3(href="/features") Features
                -if(!user)
                    li.nav-item.text-center
                        a.btn-outline-primary.btn.my-2.my-lg-3.mx-2.px-4(href="/login")
                            i.bi.bi-box-arrow-in-right
                            | LOGIN
                    li.nav-item.text-center
                        a.btn-primary.btn.my-4.my-lg-3.ms-2.px-4(href="/register")
                            i.bi.bi-pencil-square
                            | REGISTER
                -if(user)
                    li.nav-item.text-center
                        a.btn-primary.btn.my-2.my-lg-3.mx-2.px-4(href="/profile")
                            i.bi= user.name
                    a.btn-logout.btn-outline-primary.btn.my-2.my-lg-3.mx-2.px-4(href="#")
                            i.bi
                            | Logout