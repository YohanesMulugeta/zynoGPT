        .div.py-3.px-4.bg-white.rounded-3.border.border-1
            img.img-fluid(src=`/img/${img}.png`, width="80px", alt=`${alt}`)
            h3.fw-bold.mt-2= header 
            p= text
            .d-grid
                a.btn-primary.btn.fs-5.fw-bold.px-4(href=`/${href}`)
